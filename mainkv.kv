<MyLayout>:

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Button:
		    id: left_button
			font_size: 32
			text: "Left 30°"
			on_press: root.left_press()
		Button:
		    id: right_button
			font_size: 32
			text: "Right 30°"
			on_press: root.right_press()

        Label:
            text: root.press_property
			id: label1
			font_size: 32

        Image:
            size_hint_y: 1
            source:"arrow.jpg"
            width: 100
            allow_stretch: True

